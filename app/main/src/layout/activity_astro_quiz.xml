<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.munna.com.quizinggame.AstroQuiz"
    android:background="#948787">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question"
        android:id="@+id/AstroQ"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Astro1"
        android:id="@+id/Astro1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="CheckAstro" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Astro2"
        android:id="@+id/Astro2"
        android:layout_alignTop="@+id/Astro1"
        android:layout_alignParentEnd="true"
        android:onClick="CheckAstro" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Astro3"
        android:id="@+id/Astro3"
        android:layout_below="@+id/Astro1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:onClick="CheckAstro" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Astro4"
        android:id="@+id/Astro4"
        android:layout_alignTop="@+id/Astro3"
        android:layout_alignEnd="@+id/Astro2"
        android:onClick="CheckAstro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:id="@+id/AstroScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result"
        android:id="@+id/AstroResult"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/AstroBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="nextAstro"
        android:id="@+id/AstroNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
